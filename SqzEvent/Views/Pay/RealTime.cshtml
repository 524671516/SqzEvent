
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>寿全斋1024盛典-主页</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        body {
            background: #eee;
            margin: 50px 0 20px 0px;
        }

        .container-body {
            margin: auto;
        }

        .primary {
            color: #ff4361;
        }

        .login-logo {
            width: 200px;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="container container-body">
        <div class="row">
            <div class="col-xs-12">
                <div id="total">
                    下载量：<span class="t_num"></span>次
                </div> 
            </div>
        </div>
    </div>
    <input type="hidden" id="cur_num" value="">

    <script src="~/Scripts/jquery-1.7.2.min.js"></script>
    <script src="~/Scripts/animateBackground-plugin.js"></script>
    <script>
        var amount = 100;
        $(function () {
            getdata();
            setInterval('getdata()', 3000);
        });

        function getdata() {
            amount += 100;
            show_num(amount);
        }

        function show_num(n) {
            var it = $(".t_num i");
            var len = String(n).length;
            for (var i = 0; i < len; i++) {
                if (it.length <= i) {
                    $(".t_num").append("<i></i>");
                }
                var num = String(n).charAt(i);
                var y = -parseInt(num) * 30;
                var obj = $(".t_num i").eq(i);
                obj.animate({
                    backgroundPosition: '(0 ' + String(y) + 'px)'
                }, 'slow', 'swing', function () { }
                );
            }
            $("#cur_num").val(n);
        }

    </script>
</body>
</html>
