@model SqzEvent.Models.BreakdownReport
<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="icon icon-back" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding"><strong>故障详情</strong></div>
    </div>
</div>
<div class="pages">
    <div class="page" data-page="breakdowndetails" id="breakdowndetails">
        <div class="page-content">
            <div class="content-block-title">故障报告</div>
            <div class="list-block">
                <ul>
                    <li>
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title">状态</div>
                                <div class="item-after">@Html.BreakdownStatus(Model.Status)</div>
                            </div>
                        </div>

                    </li>
                    <li>
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title">工厂名称</div>
                                <div class="item-after">@Html.Encode(Model.QCEquipment.Factory.SimpleName)</div>
                            </div>
                        </div>

                    </li>
                    <li>

                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title">设备名称</div>
                                <div class="item-after">@Html.Encode(Model.QCEquipment.SimpleName)</div>
                            </div>
                        </div>
                    </li>
                    <li>

                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title">故障类型</div>
                                <div class="item-after">@Html.Encode(Model.BreakdownType.SimpleDescribe)</div>
                            </div>
                        </div>

                    </li>
                    <li>
                        <a href="javascript:;" class="item-content item-link qc-photos" data-photos="@Model.Photos">
                            <div class="item-inner">
                                <div class="item-title">故障时间</div>
                                <div class="item-after">@Html.Encode(Model.BreakDownTime.ToString("HH:mm"))</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <div class="item-content">
                            <div class="item-inner">
                                <div class="item-title">修复时间</div>
                                <div class="item-after">@Html.Encode(Model.RecoveryTime != null ? Convert.ToDateTime(Model.RecoveryTime).ToString("HH:mm") : "")</div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="content-block-title">故障备注</div>
            <div class="list-block">
                <ul>
                    <li>
                        <div class="item-content middle-content">
                            @Html.TextAreaFor(m => m.ReportContent, new { placeholder = "请输入签到备注", @class = "required input-textarea", @readonly = "readonly" })
                        </div>
                    </li>
                </ul>
            </div>
            <div class="content-block-title">故障信息</div>
            <div class="list-block">
                <ul>
                    <li>
                        <div class="item-content middle-content">
                            @Html.TextAreaFor(m => m.RecoveryRemark, new { placeholder = "请输入签到备注", @class = "required input-textarea", @readonly = "readonly" })
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
