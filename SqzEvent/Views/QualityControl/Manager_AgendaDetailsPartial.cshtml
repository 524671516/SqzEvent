@model SqzEvent.Models.QCAgenda
<div class="list-block">
    <div class="list-group">
        <ul>
            <li class="list-group-title">工厂信息</li>
            <li>
                <a href="/QualityControl/ProductionPlan" class="item-link item-content">
                    <div class="item-media"><i class="fa fa-calendar  icon-css" aria-hidden="true"></i></div>
                    <div class="item-inner">
                        <div class="item-title">生产计划</div>
                        <div class="item-after"></div>
                    </div>
                </a>
            </li>
            <li>
                <a href="/QualityControl/Manager_QualityTest?fid=@Model.FactoryId&date=@DateTime.Now.ToString("yyyy-MM-dd")" class="item-link item-content">
                    <div class="item-media"><i class="fa fa-check-square icon-css" aria-hidden="true"></i></div>
                    <div class="item-inner">
                        <div class="item-title">产品检验<sup id="qt_dot" class="hidden"><i class="fa fa-circle color-red"></i></sup></div>
                        <div class="item-after" id="qt_count">0</div>
                    </div>
                </a>
            </li>
            <li>
                <a href="/QualityControl/Manager_Breakdown?fid=@Model.FactoryId&date=@DateTime.Now.ToString("yyyy-MM-dd")" class="item-link item-content">
                    <div class="item-media"><i class="fa fa-wrench icon-css" aria-hidden="true"></i></div>
                    <div class="item-inner">
                        <div class="item-title">故障报告<sup id="bd_dot" class="hidden"><i class="fa fa-circle color-red"></i></sup></div>
                        <div class="item-after" id="bd_count">0</div>
                    </div>
                </a>
            </li>
        </ul>
    </div>
    <div class="list-group">
        <ul>
            <li class="list-group-title">个人信息</li>
            <li class="accordion-item">
                <a href="#" class="item-content item-link">
                    <div class="item-media"><i class="fa fa-sign-in icon-css" aria-hidden="true"></i></div>
                    <div class="item-inner">
                        <div class="item-title">签到信息</div>
                    </div>
                </a>
                <div class="accordion-item-content">
                    <div class="list-block">
                        <!-- First group-->
                        <div class="list-group">
                            <ul>
                                <li>
                                    <div class="item-inner item-content">
                                        <div class="item-title">签到时间</div>
                                        <div class="item-after">@Model.CheckinTime</div>
                                    </div>
                                </li>
                                <li>
                                    <div class="item-inner item-content">
                                        <div class="item-title">正式员工</div>
                                        <div class="item-after">@Model.OfficalWorkers<span>人</span></div>
                                    </div>
                                </li>
                                <li>
                                    <div class="item-inner item-content">
                                        <div class="item-title">兼职员工</div>
                                        <div class="item-after">@Model.TemporaryWorkers<span>人</span></div>
                                    </div>
                                </li>
                                <li>
                                    <div class="item-inner item-content">
                                        <div class="item-title">开机数</div>
                                        <div class="item-after">@Model.Status<span>台</span></div>
                                    </div>
                                </li>
                                <li>
                                    <a href="javascript:;" class="item-content item-link qc-photos" data-photos="@Model.Photos">
                                        <div class="item-inner">
                                            <div class="item-title">签到图片</div>
                                            <div class="item-after">点击查看</div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- Second group-->
                        <div class="list-group">
                            <ul>
                                <li class="list-group-title">签到备注</li>
                                <li>
                                    <div class="item-content middle-content">
                                        @Html.TextAreaFor(m => m.CheckinRemark, new { placeholder = "请输入签到备注", @class = "required input-textarea", @readonly = "readonly" })
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    </div>
            <li class="accordion-item">
                <a href="#" class="item-content item-link">
                    <div class="item-media"><i class="fa fa-sign-out icon-css" aria-hidden="true"></i></div>
                    <div class="item-inner">
                        <div class="item-title">签退信息</div>
                    </div>
                </a>
                <div class="accordion-item-content">
                    <div class="list-block">
                        <!-- First group-->
                        <div class="list-group">
                            <ul>
                                <li>
                                    <div class="item-inner item-content">
                                        <div class="item-title">签退时间</div>
                                        <div class="item-after">@Model.CheckoutTime</div>
                                    </div>
                                </li>                             
                            </ul>
                        </div>
                        <!-- Second group-->
                        <div class="list-group">
                            <ul>
                                <li class="list-group-title">签退备注</li>
                                <li>
                                    <div class="item-content middle-content">
                                        @Html.TextAreaFor(m => m.CheckinRemark, new { placeholder = "请输入签到备注", @class = "required input-textarea", @readonly = "readonly" })
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </li>
            <li class="accordion-item">
                <a href="#" class="item-content item-link">
                    <div class="item-media"><i class="fa fa-pencil-square-o icon-css" aria-hidden="true"></i></div>
                    <div class="item-inner">
                        <div class="item-title">工作总结</div>
                    </div>
                </a>
                <div class="accordion-item-content">
                    <div class="list-block">
                        <!-- First group-->
                        <div class="list-group">
                            <ul>
                                <li class="list-group-title">产量数据</li>
                                <li>
                                    <div class="item-inner item-content">
                                        <div class="item-title">红糖姜茶</div>
                                        <div class="item-after">@Model.CheckoutTime</div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <!-- Second group-->
                        <div class="list-group">
                            <ul>
                                <li class="list-group-title">总结备注</li>
                                <li>
                                    <div class="item-content middle-content">
                                        @Html.TextAreaFor(m => m.CheckinRemark, new { placeholder = "请输入签到备注", @class = "required input-textarea", @readonly = "readonly" })
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
