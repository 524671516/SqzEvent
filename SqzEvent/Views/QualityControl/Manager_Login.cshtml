@model SqzEvent.Models.QC_ManagerLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>寿全斋管理员-登陆</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        body {
            background: #eee;
            margin: 50px 0 20px 0px;
        }

        .container-body {
            margin: auto;
        }

        .primary {
            color: #ff4361;
        }

        .login-logo {
            width: 200px;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="container container-body">
        <div class="row">
            <div class="col-xs-3"></div>
            <div class="text-center col-xs-6">
                <div class="login-logo img-responsive">
                    <img src="~/Content/images/period-aid-logo.png" class="img-responsive img-circle" />
                    <h4 class="primary">管理员登陆</h4>
                </div>
            </div>
            <div class="col-xs-3"></div>
        </div>
        <div class="row">
            <br />
            <div class="col-xs-2"></div>
            <div class="col-xs-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        

                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control input-lg", @placeholder = "手机号码" })
                            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                @Html.EditorFor(model => model.CheckCode, new { htmlAttributes = new { @class = "form-control input-lg" } })
                                <span class="input-group-btn">
                                    <button class="btn btn-default btn-lg" type="button" id="sendsms" disabled="disabled">获取验证码</button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.CheckCode, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-group text-center">
                            <input type="submit" value="&nbsp;&nbsp;&nbsp;&nbsp;登&nbsp;&nbsp;陆&nbsp;&nbsp;&nbsp;&nbsp;" id="submit-btn" class="btn btn-default btn-danger btn-pr btn-lg" />
                        </div>
                    </div>
                }
            </div>
            <div class="col-xs-2"></div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        var countdown = 60;
        //settime($("#sendsms"));
        $(function () {
            $("#Mobile").keyup(function () {
                if ($(this).val().match("1[3|4|5|7|8|][0-9]{9}")) {
                    $("#sendsms").removeAttr("disabled");
                }
                else {
                    $("#sendsms").attr("disabled", true);
                }
            });
            $("#sendsms").click(function () {
                var current_mobile = $("#Mobile").val();
                var button = $(this);
                countdown = 60;
                settime($(this));
                $.ajax({
                    url: "/QualityControl/SendSMS",
                    data: {
                        mobile: current_mobile,
                        __RequestVerificationToken: $("input[name=__RequestVerificationToken]").val()
                    },
                    type: "POST",
                    success: function (data) {

                    }
                });
            });
        });
        $("#submit-btn").click(function () {
            $(this).attr("disabled", "disabled").val("提交中...");
            $("form").submit();
            return false;
        })
        function settime(val) {
            if (countdown == 0) {
                $(val).removeAttr("disabled");
                $(val).text("获取验证码");
                //countdown = 60;
            } else {
                $(val).attr("disabled", true);
                $(val).text("重新发送(" + countdown + ")");
                countdown--;
            }
            setTimeout(function () {
                settime(val)
            }, 1000)
        }
    </script>
</body>
</html>
