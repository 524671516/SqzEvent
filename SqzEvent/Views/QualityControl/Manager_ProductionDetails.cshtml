@model IEnumerable<SqzEvent.Models.QCAgenda>


<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="icon icon-back" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding"><strong>当月生产明细列表</strong></div>
    </div>
</div>
<div class="pages">
    <div class="page" data-page="Manager_ProductionDetails" id="Manager_ProductionDetails">
        <div class="page-content">
            @{
                var dates = from m in Model group m by m.Subscribe into g select g.Key;
                foreach (DateTime dt in dates)
                {
                    <div class="content-block-title">@Html.Encode(dt.ToString("yyyy-MM-dd"))</div>
                    <div class="list-block media-list">
                        <ul>
                            @foreach (var item in Model.SingleOrDefault(m => m.Subscribe == dt).ProductionDetails)
                            {
                                <li class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title-row">
                                            <div class="item-title">@Html.Encode(item.Product.SimpleName)</div>
                                            <div class="item-after">@Html.Encode(item.ProductionQty)</div>  
                                        </div>
                                        <div class="item-subtitle color-gray"><span>品类:@Html.Encode(item.Product.ProductClass.ProductClassName)</span>&nbsp;<span>规格:@Html.Encode(item.Product.Specification)</span></div>                                                        
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }
        </div>
    </div>
</div>
