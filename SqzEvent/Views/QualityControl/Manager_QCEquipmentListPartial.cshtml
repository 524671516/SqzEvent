@model IEnumerable<SqzEvent.Models.QCEquipment>
@if (Model.Count() != 0)
{
    <div class="list-block media-list">
        <ul>
            @foreach (var item in Model)
            {
                <li class="swipeout" data-url="/QualityControl/DelEquipemntForFactory?Eid=@item.Id">
                        <div class="swipeout-content">
                            <a href="/QualityControl/Manager_EquipmentDetails?Eid=@item.Id" class="item-link item-content" data-ignore-cache="true">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">@Html.Encode(item.SimpleName)</div>
                                        <div class="item-after">@Html.Encode(Convert.ToDateTime(item.ManufactureDate).ToString("yyyy-MM-dd"))</div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="swipeout-actions-right">
                            <a href="/QualityControl/Manager_EditEquipment?Eid=@item.Id" class="bg-green" data-ignore-cache="true">修改</a>
                            <a href="#" class="swipeout-delete" data-confirm="是否确认删除" data-confirm-title="寿全斋" data-close-on-cancel="true">删除</a>
                        </div>

                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="content-block-title">此工厂不存在设备(请添加设备)</div>
}

