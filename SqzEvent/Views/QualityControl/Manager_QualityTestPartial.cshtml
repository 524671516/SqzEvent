@model IEnumerable<SqzEvent.Models.QualityTest>
@if (Model.Count() != 0)
{
    <div class="list-block media-list bottom-list">
        <ul>
            @foreach (var item in Model)
            {
                <li class="swipeout" data-url="@item.Id">
                    <div class="swipeout-content">
                        @if (item.EvalResult)
                        {
                            <a href="/QualityControl/Manager_QualityTestDetail?qtid=@item.Id" class="item-link item-content random-param pass-border">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">@Html.Encode(item.Product.SimpleName) <span style="font-weight:100">(@Html.Encode(item.ProductionQty) 盒)</span></div>
                                        <div class="item-after">@Html.Encode(item.ApplyTime.ToString("HH:mm"))</div>
                                    </div>
                                </div>
                            </a>
                        }
                        else
                        {
                            <a href="/QualityControl/Manager_QualityTestDetail?qtId=@item.Id" class="item-link item-content random-param fail-border">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">@Html.Encode(item.Product.SimpleName) <span style="font-weight:100">(@Html.Encode(item.ProductionQty) 盒)</span></div>
                                        <div class="item-after">@Html.Encode(item.ApplyTime.ToString("HH:mm"))</div>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="content-block-title">未找到质检记录</div>
}

