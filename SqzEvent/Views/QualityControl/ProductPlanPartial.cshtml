@model IEnumerable<SqzEvent.Models.ProductionSchedule>
@if (Model.Count() != 0)
{
    <div class="content-block-title">今日计划</div>
    <div class="list-block media-list">
        <ul>
            @foreach (var item in Model)
            {
                <li class="swipeout" data-url="@item.Id">
                    @if (item.Status == true)
                    {
                        <a href="javascript:;" class="item-content random-param pass-border color-black">
                            <div class="item-inner">
                                <div class="item-title-row">
                                    <div class="item-title">@Html.Encode(item.Product.SimpleName)</div>
                                    <div class="item-after">@Html.Encode(item.ProductionQty??0)/@Html.Encode(item.ProductionPlan)</div>
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a href="javascript:;" class="item-content random-param fail-border color-black">
                            <div class="item-inner">
                                <div class="item-title-row">
                                    <div class="item-title">@Html.Encode(item.Product.SimpleName)</div>
                                    <div class="item-after">@Html.Encode(item.ProductionQty??0)/@Html.Encode(item.ProductionPlan)</div>
                                </div>
                            </div>
                        </a>
                    }

                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="content-block-title">无计划</div>
}
