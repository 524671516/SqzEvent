@model IEnumerable<SqzEvent.Models.ProductionSchedule>
@if (Model.Count() != 0)
{
    <div class="content-block-title">今日计划</div>
    <div class="list-block media-list">
        <ul>
            @foreach (var item in Model)
            {
                <li class="swipeout" data-url="@item.Id">
                    @if (item.Status == true)
                    {
                        <div class="swipeout-content">
                            <a href="javascript:;" class="item-link item-content random-param pass-border">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">@Html.Encode(item.Subscribe)</div>
                                        <div class="item-after">@Html.Encode(item.ProductId)</div>
                                    </div>
                                    <div class="item-subtitle color-gray">@Html.Encode(item.ProductionPlan)</div>
                                </div>
                            </a>
                        </div>
                        <div class="swipeout-actions-right">
                            <a href="javascript:;" class="bg-gray">已修复</a>
                        </div>
                    }
                    else
                    {
                        <div class="swipeout-content">
                            <a href="/QualityControl/PlanDetails?bdId=@item.Id" class="item-link item-content random-param fail-border">
                                <div class="item-inner">
                                    <div class="item-title-row">
                                        <div class="item-title">@Html.Encode(item.FactoryId)</div>
                                        <div class="item-after">@Html.Encode(item.ProductId)</div>
                                    </div>
                                    <div class="item-subtitle color-gray">@Html.Encode(item.ProductionQty)</div>
                                </div>
                            </a>
                        </div>
                        <div class="swipeout-actions-right">
                            <a href="javascript:;" class="bg-green">确认完成</a>
                        </div>
                    }

                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="content-block-title">无计划</div>
}
