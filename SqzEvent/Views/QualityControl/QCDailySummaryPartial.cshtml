@using SqzEvent.Models;
@model SqzEvent.Models.QCAgenda

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.FactoryId)
    @Html.HiddenFor(model => model.QCStaffId)
    @Html.HiddenFor(model => model.Status)
    @Html.HiddenFor(m => m.CheckinTime)
    @Html.HiddenFor(m => m.CheckoutTime)
    @Html.HiddenFor(m => m.Subscribe)
    @Html.HiddenFor(m => m.Photos)
    @Html.HiddenFor(model => model.CheckinRemark)
    @Html.HiddenFor(model => model.OfficalWorkers)
    @Html.HiddenFor(model => model.TemporaryWorkers)
    <div class="form-group">
        @Html.LabelFor(model => model.WorkHours, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.WorkHours, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.WorkHours, "", new { @class = "text-danger" })
        </div>
    </div>
    <div>产量数据</div>
    foreach (Product p in ViewBag.ProductList)
    {
        <span>@Html.Encode(p.SimpleName)</span><br /><input id="@p.ProductCode" name="@p.ProductCode" />
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Remark, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
        </div>
    </div>


}
