@model SqzEvent.Models.QCAgenda
<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="icon icon-back" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding"><strong></strong></div>
        <div class="right">
            <a href="javascript:;" class="link" id="qccheckin-submit">提交</a>
        </div>
    </div>
</div>
<div class="pages">
    <div class="page" data-page="qualityregulartest">
        <div class="page-content">
            @using (Html.BeginForm("QualityRegularTest", "QualityControl", FormMethod.Post, new { @id = "qualityregulartest-form", @class = "validate-form" }))
            {
                
                <div class="list-block">
                    <ul>
                        <li>
                            <a class="item-link">
                                <div class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title" style="width:50%">选择日期</div>
                                        <div class="item-input" >                                          
                                                <input id="qualitytestlist-date" type="text" placeholder="日期" value="@DateTime.Now.ToString("yyyy-MM-dd")"class="item-input-right" />                                         
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="item-link smart-select" id="factory-select" data-back-text="返回" data-back-on-select="true" data-searchbar-placeholder="选择工厂" data-searchbar-cancel="取消">
                             @Html.DropDownListFor(m => m.FactoryId, ViewBag.FactoryList as SelectList, "- 请选择 -", new { @class = "required" })
                                <div class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title">选择工厂</div>
                                        <div class="item-after">- 请选择 -</div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
                <div id="input-content">
                    <div class="list-block" id="template-content">

                    </div>
                    <div class="list-block">
                        <ul>
                            <li>
                                <div class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title">上传照片</div>
                                        <div class="item-after"><abbr id="qualityregulartest-imgcount">0</abbr>/9</div>
                                    </div>
                                </div>
                                <div class="item-content middle-content">
                                    <div class="item-inner">
                                        <div class="hidden">
                                            @Html.TextBoxFor(m => m.Photos, new { @class = "photos" })
                                        </div>
                                        <ul class="rep-imglist" id="qualityregulartest-photos"></ul>
                                    </div>
                                </div>
                            </li>              
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
