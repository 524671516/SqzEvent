@model IEnumerable<SqzEvent.Models.QualityTest>

@if (Model.Count() != 0)
{
    <div class="content-block-title">产品检验记录</div>
    <div class="list-block media-list">
        <ul>
            @foreach (var item in Model)
            {
                <li class="swipeout" data-url="@item.Id">
                    <div class="swipeout-content">
                        <a href="/QualityControl/QualityTestDetails?qtId=@item.Id" class="item-link item-content random-param add-border">
                            <div class="item-inner">
                                <div class="item-title-row">
                                    <div class="item-title">@Html.Encode(item.Product.SimpleName)<span>(@Html.Encode(item.EvalResult))</span></div>
                                    <div class="item-after">@Html.Encode(item.ApplyTime.ToString("HH:mm"))</div>
                                </div>
                                <div class="item-subtitle color-gray">@Html.Encode("工厂名称")</div>
                            </div>
                        </a>
                    </div>
                    <div class="swipeout-actions-right">
                        <a href="javascript:;" class="bg-red">删除</a>
                    </div>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="content-block-title">未找到质检记录</div>
}
