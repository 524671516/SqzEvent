@model IEnumerable<SqzEvent.Models.Off_Recruit>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <li class="swipeout">
            <div class="swipeout-content">
                <a href="/Seller/Manager_RecruitDetails?rid=@item.Id" class="item-content item-link">
                    <div class="item-inner">
                        <div class="item-title">@Html.Encode(item.Name)</div>
                        <div class="item-after">@Html.Encode(item.Area)</div>
                    </div>
                </a>
            </div>
        </li>
    }
}
else
{
    <div class="content-block-title no-more"  id="recruit-none">- 没有更多的加载项 -</div>
}

