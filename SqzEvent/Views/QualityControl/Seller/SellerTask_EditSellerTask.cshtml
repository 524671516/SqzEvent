@model SqzEvent.Models.Off_SellerTask

<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding">每日任务</div>
        <div class="right">
            <a href="" class="link icon-only open-panel"><i class="icon icon-bars"></i></a>
        </div>
    </div>
</div>
<div class="pages">
    <div data-page="EditSellerTask" class="page">
        <div class="page-content">
            @using (Html.BeginForm("SellerTask_EditSellerTask", "Seller", FormMethod.Post, new { @id = "editsellerreport-form", @class = "list-block validate-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.SellerId)
                @Html.HiddenFor(m => m.StoreId)
                @Html.HiddenFor(m => m.ApplyDate)
                <div class="content-block-title">库存报表</div>
                {
                    Html.RenderAction("SellerTask_ProductPartial", new { taskid = Model.Id });
                }
                <div class="content-block-title">上传照片</div>
                <div class="list-block">
                    <ul>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title">上传照片</div>
                                    <div class="item-after"><abbr id="current_image">0</abbr>/3</div>
                                </div>
                            </div>
                            <div class="item-content" id="photo-list">
                                <div class="item-inner">
                                    <div class="hidden">
                                        @Html.EditorFor(m => m.TaskPhotoList)
                                    </div>
                                    <ul class="rep-imglist" id="sellerreport-imglist"></ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="content-block">
                    <a href="javascript:;" class="button button-big button-fill" id="editsellerreport-btn">修改</a>
                </div>
            }
        </div>
    </div>
</div>


