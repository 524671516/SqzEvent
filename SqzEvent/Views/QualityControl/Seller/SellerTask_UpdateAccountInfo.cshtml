@model SqzEvent.Models.Wx_SellerCreditViewModel

<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding"><strong>完善账户信息</strong></div>
        <div class="right">
            <a href="" class="link icon-only open-panel"><i class="icon icon-bars"></i></a>
        </div>
    </div>
</div>
<div class="pages">
    <div data-page="UpdateAccountInfo" class="page">
        <div class="page-content">
            @using (Html.BeginForm("SellerTask_UpdateAccountInfo", "Seller", FormMethod.Post, new { @id="updateaccountinfo-form", @class="validate-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("错误", new { @id = "error-message", @class = "hidden" })
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.Name)
                @Html.HiddenFor(m => m.Mobile)
                <div class="list-block">
                    <ul>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label">身份证号码</div>
                                    <div class="item-input">
                                        @Html.EditorFor(m => m.IdNumber, new { htmlAttributes = new { placeholder = "请输入身份证号码" } })
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <a href="#" class="item-link smart-select" data-back-on-select="true" data-back-text="返回">
                                <!-- select -->
                                @Html.DropDownListFor(m => m.CardName, ViewBag.BankList as SelectList)
                                <div class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title">请选择银行</div>
                                        <div class="item-after">@Html.Encode(Model.CardName)</div>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label">开户行</div>
                                    <div class="item-input">
                                        @Html.EditorFor(m => m.AccountSource, new { htmlAttributes = new { placeholder = "请输入开户行名称" } })
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label">开户人姓名</div>
                                    <div class="item-input">
                                        @Html.EditorFor(m => m.AccountName, new { htmlAttributes = new { placeholder = "请输入开户行名称" } })
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="item-content">
                                <div class="item-inner">
                                    <div class="item-title label">银行卡号</div>
                                    <div class="item-input">
                                        @Html.EditorFor(m => m.CardNo, new { htmlAttributes = new { placeholder = "请输入开户行名称" } })
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="content-block">
                    <a href="javascript:;" type="submit" class="button button-big button-fill" id="updateaccountinfo-submit">提交</a>
                </div>
            }
        </div>
    </div>
</div> 