

<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding">切换账户</div>
        <div class="right">
            <a href="javascript:;" class="link" id="changeaccount-submit">提交</a>
        </div>
    </div>
</div>
<div class="pages">
    <div class="page" data-page="seller-changeaccount">
        <div class="page-content">
            @using (Html.BeginForm("Seller_ChangeAccount", "Seller", FormMethod.Post, new { @id = "changeaccount-form" }))
            {
                @Html.AntiForgeryToken()
                <div class="content-block-title">基本信息</div>
                <div class="list-block">
                    <ul>
                        <li>
                            <a href="#" class="item-link smart-select" data-back-text="返回" data-back-on-select="true">
                                @Html.DropDownList("SystemId", ViewBag.SystemList as SelectList)
                                <div class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title">系统</div>
                                        <div class="item-after smart-select"></div>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="item-link smart-select" data-back-text="返回" data-back-on-select="true">
                                @Html.DropDownList("BindId", ViewBag.BindList as SelectList)
                                <div class="item-content">
                                    <div class="item-inner">
                                        <div class="item-title">绑定店铺</div>
                                        <div class="item-after smart-select" id="bindstore"></div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
