@model IEnumerable<SqzEvent.Models.Off_SalesEvent>
<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="icon icon-back" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding">本周活动</div>
    </div>
</div>
<div class="pages">
    <div class="page" data-page="week-event-list">
        <div class="page-content">
            <div class="list-block media-list" id="week-eventlist">
                @if (Model.Count() == 0)
                {
                    <div class="content-block-title">无活动签呈</div>
                }
                else
                {

                        foreach (var item in Model)
                        {
                            <div class="card facebook-card">
                                <div class="card-header">
                                    <div class="facebook-avatar"><img src="@ViewBag.ImgUrl" width="34" height="34" class="img-responsive"></div>
                                    <div class="facebook-name">@Html.ManagerNickName(item.CreateUserName,(int)ViewBag.SystemId)</div>
                                    <div class="facebook-date">@item.CreateDateTime</div>
                                </div>
                                <div class="card-content">
                                    <div class="card-content-inner">
                                        <p>@item.EventDetails</p>
                                        <p class="color-gray"><i class="fa fa-clock-o" aria-hidden="true"></i>&nbsp;@Html.Encode(item.StartDate.ToString("MM/dd") + " - " + item.EndDate.ToString("MM/dd"))&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-paperclip" aria-hidden="true"></i>&nbsp;@Html.ManagerRequestStatus(item.Status)</p>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <a href="#" class="link"></a>
                                    <a href="#" class="link"></a>
                                    <a href="/Seller/Manager_SalesEventDetails?Id=@item.Id" class="link">更多</a>
                                </div>
                            </div>
                        }

                }

            </div>
        </div>
    </div>
</div>
