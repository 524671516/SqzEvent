@model SqzEvent.Models.Off_Checkin_Schedule

<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="#" class="back link">
                <i class="icon icon-back" aria-hidden="true"></i>
                <span>返回</span>
            </a>
        </div>
        <div class="center sliding"><strong>促销员日程详情</strong></div>
    </div>
</div>
<div class="pages">
    <div class="page" data-page="manager-viewschedule">
        <div class="page-content">
            <div class="list-block">
                <ul>
                    <li class="item-content">
                        <div class="item-inner">
                            <div class="item-title">店铺名称</div>
                            <div class="item-after">@Html.Encode(Model.Off_Store.StoreName)</div>
                        </div>
                    </li>
                    <li class="item-content">
                        <div class="item-inner">
                            <div class="item-title">活动日期</div>
                            <div class="item-after">@Html.Encode(Model.Subscribe.ToString("yyyy-MM-dd"))</div>
                        </div>
                    </li>
                    <li class="item-content">
                        <div class="item-inner">
                            <div class="item-title">上班时间</div>
                            <div class="item-after">@Html.Encode(Model.Standard_CheckIn.ToString("HH:mm"))</div>
                        </div>
                    </li>
                    <li class="item-content">
                        <div class="item-inner">
                            <div class="item-title">下班时间</div>
                            <div class="item-after">@Html.Encode(Model.Standard_CheckOut.ToString("HH:mm"))</div>
                        </div>
                    </li>                    
                    <li class="item-content">
                        <div class="item-inner">
                            <div class="item-title">标准工资</div>
                            <div class="item-after">@Html.Encode(Model.Standard_Salary)</div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
