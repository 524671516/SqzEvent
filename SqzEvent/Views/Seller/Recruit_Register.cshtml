@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>Recruit_Register</title>
    <link href="~/Content/normalize.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<style>
    html, body {
        width: 100%;
    }
    input {
        outline: none;
        border: none;
    }
    a {
        text-decoration: none;
    }
    ul, li {
        list-style: none;
        margin: 0;
        padding: 0;
    }
    form {
        margin-top: 30px;
    }
    form li {
        padding: 10px 5px 10px 5px;
    }
    ul {
        width: 90%;
        margin: 0 auto;
    }
    header {
        width: 80%;
        margin: 0 auto;
        text-align: center;
    }
    .verification-content a {
        display: inline-block;
        text-decoration: none;
    }
    .verification-content input {
        width: 45%;
    }   
    #verification-code {
        width: 100%;
    }
    .item-inner > div {
        display: inline-block;
    }
     .col-35{
         width:35%;
     }
    .col-40 {
        width: 40%;
    }
    .col-45 {
        width: 45%;
    }

    .col-10 {
        width: 10%;
    }
    .col-15 {
        width: 15%;
    }
    .col-50 {
        width: 50%;
    }
    .col-25 {
        text-align: left;
        width: 25%;
    }
    .col-20 {
        width: 20%;
    }
    .col-33 {
        width: 33.333333333%;
    }
    .hidden {
        display: none !important;
    }
    .color-gray {
        color: #ababab;
    }
    .border-bottom {
        border-bottom: 1px solid #ccc;
    }
    .border-left {
        height:22px;
        float:right;
        padding: 5px 5px 1px 5px;
        font-size: 12px;
        background: #007aff;
        color: #fff;
        text-align: center;
        box-sizing: border-box;
        font-size: 12px;
        cursor: pointer;
        outline: 0;
    }
    .color-blue {
        color: #007aff;
    }
    .color-red {
        color: red;
    }
    .color-green {
        color: green;
    }
    .color-gary {
        color: #ccc;
    }

    .btn {
        background: #007aff;
        color: #fff;
        text-align: center;
        display: block;
        border-radius: 5px;
        line-height: 27px;
        box-sizing: border-box;
        height: 29px;
        font-size: 14px;
        cursor: pointer;
        outline: 0;
    }
        #register-btn{
        margin:50px auto auto auto;
    }
        .verification-error{
            width:8%;
        }
</style>
<body>
    <header><h2>注册</h2></header>
    <form id="register-form">
        <ul>
            <li class="item-content username-content border-bottom">
                <div class="item-inner">
                    <div class="item-title col-20">姓名</div>
                    <div class="item-input">
                        <input type="text" name="username" placeholder="请输入真实姓名" id="username">
                    </div>
                </div>
            </li>
            <li class="item-content tel-content border-bottom">
                <div class="item-inner">
                    <div class="item-title col-20">手机号</div>
                    <div class="item-input">
                        <input type="tel" name="tel" placeholder="手机号码(11位)" id="tel-number">
                    </div>
                </div>
            </li>
            <li class="item-content recommend-content border-bottom">
                <div class="item-inner">
                    <div class="item-title col-20">推荐码</div>
                    <div class="item-input">
                        <input type="text" name="recommend" placeholder="输入推荐码(选填)" id="recommend-code">
                    </div>
                </div>
            </li>
            <li class="item-content verification-content">
                <div class="item-inner">
                    <div class="item-title col-20">验证码</div>
                    <div class="item-input col-35">
                        <input type="text" name="verification" placeholder="输入验证码" id="verification-code">
                    </div>                  
                    <a class="item-after border-left" href="javascript:;" id="get-verification">获取验证码</a>
                    <a class="item-after border-left hidden" href="javascript:;" id="wait-num"><span></span>秒后重发</a>
                </div>
            </li>
        </ul>
        <a href="#" id="register-btn" class="btn col-50">成为促销员</a>
    </form>
    <script>
        $("input").each(function () {
            $(this).on("focus", function () {
                $(this).parent().next(".add").remove();
            })
        })
        var word_type = /^[\u4e00-\u9fa5]{1,6}$/
        var tel_type = /^(13[0-9]|14[0-9]|15[0-9]|18[0-9])\d{8}$/
        var recommend_type = /^\d{6}$/
        var verification_type = /^\d{6}$/
        $("#get-verification").on("click", function () {
            var bool = true;
            if (!word_type.test($("#username").val())) {
                $(".username-content .item-after").remove();
                $("#username").parent().after("<div class=\"item-after add\"><i class=\"fa fa-times color-red\" aria-hidden=\"true\"></i></div>")
                bool=false
            } else {
                $(".username-content .item-after").remove();
                $("#username").parent().after("<div class=\"item-after add\"><i class=\"fa fa-check color-green\" aria-hidden=\"true\"></i></div>")
            }
            if (!tel_type.test($("#tel-number").val())) {
                $(".tel-content .item-after").remove();
                $("#tel-number").parent().after("<div class=\"item-after add\"><i class=\"fa fa-times color-red\" aria-hidden=\"true\"></i></div>")
                bool = false
            } else {
                $(".tel-content .item-after").remove();
                $("#tel-number").parent().after("<div class=\"item-after add\"><i class=\"fa fa-check color-green\" aria-hidden=\"true\"></i></div>")
            }
            if (!recommend_type.test($("#recommend-code").val())) {
                $(".recommend-content .item-after").remove();
                $("#recommend-code").parent().after("<div class=\"item-after add\"><i class=\"fa fa-times color-red\" aria-hidden=\"true\"></i></div>")
                bool = false
            } else {
                $(".recommend-content .item-after").remove();
                $("#recommend-code").parent().after("<div class=\"item-after add\"><i class=\"fa fa-check color-green\" aria-hidden=\"true\"></i></div>")
            }
            if (bool) {
                $.ajax({
                    url: "/Seller/Wx_SendSms",
                    data: {
                        mobile: $("#tel-number").val(),
                        __RequestVerificationToken: $("input[name=__RequestVerificationToken]").val()
                    },
                    type: "POST",
                    success: function (data) {
                    }
                });
                var count = 60;
                $("#wait-num span").html(count);
                $("#get-verification").addClass("hidden");
                $("#wait-num").removeClass("hidden");
                $("#wait-num").addClass("color-gary");
                var timer = setInterval(function () {
                    count--;
                    $("#wait-num span").html(count);
                    if (count == 0) {
                        clearInterval(timer);
                        $("#get-verification").removeClass("hidden");
                        $("#wait-num").addClass("hidden");
                    }
                }, 1000)
            }
        })
        $("#register-btn").on("click", function () {
            if (!word_type.test($("#username").val())) {
                $(".username-content .item-after").remove();
                $("#username").parent().after("<div class=\"item-after add\"><i class=\"fa fa-times color-red\" aria-hidden=\"true\"></i></div>")
            } else {
                $(".username-content .item-after").remove();
                $("#username").parent().after("<div class=\"item-after add\"><i class=\"fa fa-check color-green\" aria-hidden=\"true\"></i></div>")
            }
            if (!tel_type.test($("#tel-number").val())) {
                $(".tel-content .item-after").remove();
                $("#tel-number").parent().after("<div class=\"item-after add\"><i class=\"fa fa-times color-red\" aria-hidden=\"true\"></i></div>")
            } else {
                $(".tel-content .item-after").remove();
                $("#tel-number").parent().after("<div class=\"item-after add\"><i class=\"fa fa-check color-green\" aria-hidden=\"true\"></i></div>")
            }
            if (!recommend_type.test($("#recommend-code").val())) {
                $(".recommend-content .item-after").remove();
                $("#recommend-code").parent().after("<div class=\"item-after add\"><i class=\"fa fa-times color-red\" aria-hidden=\"true\"></i></div>")
            } else {
                $(".recommend-content .item-after").remove();
                $("#recommend-code").parent().after("<div class=\"item-after add\"><i class=\"fa fa-check color-green\" aria-hidden=\"true\"></i></div>")
            }
            if (!verification_type.test($("#verification-code").val())) {
                $(".verification-content .verification-error").remove();
                $("#verification-code").parent().after("<a class=\"verification-error add\"><i class=\"fa fa-times color-red\" aria-hidden=\"true\"></i></a>")
            } else {
                $(".verification-content .verification-error").remove();
                $("#verification-code").parent().after("<a class=\"verification-error add\"><i class=\"fa fa-check color-green\" aria-hidden=\"true\"></i></a>")
            }
        })
    </script>
</body>
</html>
