
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>门店促销管理系统</title>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-ie7.min.css" rel="stylesheet" />
    <link href="~/Content/framework7.ios.min.css" rel="stylesheet" />
    <link href="~/Content/framework7.ios.colors.min.css" rel="stylesheet" />
    <link href="~/Content/SellerTask.css" rel="stylesheet" />
</head>
<body>
    <div class="notifications list-block media-list">
        <ul>
            <li class="notification-item">
            </li>
        </ul>
    </div>
    <div class="statusbar-overlay"></div>
    <!-- Panels overlay-->
    <div class="panel-overlay"></div>
    <!-- Left panel with reveal effect-->
    <div class="panel panel-left panel-reveal left-nav" id="left-user-panel">

    </div>
    <!-- Views -->
    <div class="views">
        <div class="view view-main" data-page="Home">
            <!-- Top Navbar-->
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="center sliding"><strong>门店促销管理系统</strong></div>
                    <div class="right">
                        <a href="" class="link icon-only open-panel"><i class="icon icon-bars"></i></a>
                    </div>
                </div>
            </div>
            <!-- Pages container, because we use fixed-through navbar and toolbar, it has additional appropriate classes-->
            <div class="pages navbar-through toolbar-through">
                <!-- Page, "data-page" contains page name -->
                <div data-page="index" class="page">
                    <!-- Scrollable page content -->

                    <div class="page-content pull-to-refresh-content" data-ptr-distance="50">
                        <div class="pull-to-refresh-layer">
                            <div class="preloader"></div>
                            <div class="pull-to-refresh-arrow"></div>
                        </div>
                        <input type="hidden" name="sellerId" id="sellerId" value="@ViewBag.SellerId" />
                        @if (ViewBag.Bind == true)
                        {
                            <div class="content-block-title">当前得分</div>
                            <div class="list-block media-list" id="main-panel">
                                <ul>
                                    <li>
                                        <a href="/Seller/SellerTask_CreateSellerReport?id=@ViewBag.SellerId" class="item-link item-content">
                                            <div class="item-media img-box color-red" id="home-score">0</div>
                                            <div class="item-inner" style="background:url(/fonts/right.svg) no-repeat; background-position: calc(100% - 15px) center; background-size:10px 20px; ">
                                                <div class="item-title" id="home-storename">N/A</div>
                                                <div class="item-text" id="home-applydate">日期：N/A</div>
                                                <div class="item-subtitle">今日任务：<span class="color-red" id="home-status">N/A</span></div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="list-block">
                                <ul>
                                    <li>
                                        <div class="item-content">
                                            <div class="item-inner">
                                                <div class="item-title">门店未绑定</div>
                                                <div class="item-after">请联系督导绑定</div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            
                        }
                        <div class="content-block-title">辅助功能</div>
                        <div class="list-block">

                            <ul>
                                @if (ViewBag.Bind == true)
                                {
                                    <li>
                                        <a href="/Seller/SellerTask_List?id=@ViewBag.SellerId" class="item-link item-content">
                                            <div class="item-inner"><div class="item-title">查看历史</div></div>
                                        </a>
                                    </li>
                                        <li>
                                            <div>
                                                <a href="/Seller/SellerTask_UpdateAccountInfo?id=@ViewBag.SellerId" class="item-link item-content">
                                                    <div class="item-inner">
                                                        <div class="item-title">完善信息&nbsp;<sup class="notify hidden" id="account-notify"><i class="fa fa-circle" aria-hidden="true"></i></sup></div>
                                                    </div>
                                                </a>
                                            </div>
                                        </li>
                                }
                                <li>
                                    <a href="javascript:;" class="item-link item-content" id="sellertask-guide">
                                        <div class="item-inner"><div class="item-title">使用帮助</div></div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hidden">
        <span id="appId">@ViewBag.AppId</span>
        <span id="timeStamp">@ViewBag.TimeStamp</span>
        <span id="nonce">@ViewBag.Nonce</span>
        <span id="url">@ViewBag.Url</span>
        <span id="signature">@ViewBag.Signature</span>
    </div>
    <script src="~/Scripts/framework7.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.form.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js" type="text/javascript"></script>
    <script src="~/Scripts/my-validate.js"></script>
    <script src="~/Scripts/sellertask.min.js?v=1.6.5" charset="utf-8"></script>
</body>
</html>