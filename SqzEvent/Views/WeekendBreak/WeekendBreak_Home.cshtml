@model SqzEvent.Models.Off_WeekendBreak
@{
    Layout = "~/Views/Shared/_WeekendBreak.cshtml";
}
@Html.HiddenFor(m=>m.Id)
<div class="weui-cells__title">周末突破信息</div>
<div class="weui-cells">
    <div class="weui-cell">
        <div class="weui-cell__bd">
            <p>督导姓名</p>
        </div>
        <div class="weui-cell__ft">@Html.Encode(Model.Off_StoreManager.NickName)</div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__bd">
            <p>店铺名称</p>
        </div>
        <div class="weui-cell__ft">@Html.Encode(Model.Off_Checkin_Schedule.Off_Store.StoreName)</div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__bd">
            <p>上次提交时间</p>
        </div>
        <div class="weui-cell__ft">@Html.Encode(Model.LastUploadTime)</div>
    </div>
</div>
<br />
<div class="weui-grids">
    <div class="weui-grid">
        <div class="weui-grid__icon">
            <span>@Html.Encode(Model.Off_WeekendBreakRecord.Count)</span>
        </div>
        <p class="weui-grid__label">提交次数</p>
    </div>
    <div class="weui-grid">
        <div class="weui-grid__icon">
            <span>@Html.Encode(Model.Off_WeekendBreakRecord.Sum(m => m.SalesCount))</span>
        </div>
        <p class="weui-grid__label">累计销量</p>
    </div>
    <div class="weui-grid">
        <div class="weui-grid__icon">
            <span>@Html.Encode(Model.Off_WeekendBreakRecord.Sum(m => m.TrailCount))</span>
        </div>
        <p class="weui-grid__label">累计试饮</p>
    </div>
</div>
<br />
<div class="weui-btn-area">
    <a class="weui-btn weui-btn_primary" href="/WeekendBreak/WeekendBreak_AddRecord?breakId=@Model.Id">新增数据</a>
    <a class="weui-btn weui-btn_default" href="/WeekendBreak/WeekendBreak_ViewRecord?breakId=@Model.Id">数据汇总</a>
</div>
<br /><br />


